.page-header
  = link_to t('.new_link'), new_comfy_admin_cms_site_variant_path(@site), :class => 'btn btn-default pull-right'
  %h2= t('.title')

- content_for :right_column do
  = render 'comfy/admin/cms/sites/mirrors'

%table.table.table-hover.table-bordered
  %tbody.sortable
    - @variants.each do |variant|
      %tr{:id => dom_id(variant)}
        %td
          .icon
            - if !params[:category].present? && @site.variants.count > 1
              .dragger
                %span &#8645;
        %td.main
          .item-title
            = link_to [variant.label, "(#{variant.hierarchy})"].join(' '), edit_comfy_admin_cms_site_variant_path(@site, variant)
          .item-meta
            = variant.label
        %td
          .btn-group.btn-group-sm
            = link_to t('.edit'), edit_comfy_admin_cms_site_variant_path(@site, variant), :class => 'btn btn-default'
            = link_to t('.delete'), comfy_admin_cms_site_variant_path(@site, variant), :method => :delete, :data => {:confirm => t('.are_you_sure')}, :class => 'btn btn-danger'

= render 'comfy/admin/cms/partials/variants_after'
